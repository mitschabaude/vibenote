{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
